		"build-types": "tsc",
		"build-dev": "webpack --mode development --devtool source-map"
	},
	"devDependencies": {
		"@babel/core": "^7.8.4",
		"@babel/preset-env": "^7.8.4",
		"@types/jest": "^25.1.3",
		"@types/node": "^13.7.4",
		"@typescript-eslint/parser": "^2.20.0",
		"babel-eslint": "^10.0.3",
		"babel-jest": "^25.1.0",
		"css-loader": "^3.4.2",
		"eslint": "^6.8.0",
		"eslint-plugin-jest": "^23.8.0",
		"file-loader": "^5.1.0",
		"html-loader": "^0.5.5",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"node-sass": "^4.13.1",
		"sass-loader": "^8.0.2",
		"style-loader": "^1.1.3",
		"ts-jest": "^25.2.1",
		"ts-loader": "^6.2.1",
		"typescript": "^3.8.2",
		"webpack": "^4.41.6",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.10.3"
	},
	"dependencies": {
		"normalize.css": "^8.0.1"
	},
	"husky": {
